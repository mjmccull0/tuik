{
  "main": "branch-picker",
  "views": {
    "branch-picker": {
      "style": { "padding": 1 },
      "children": [
        { "text": "󱓞 Select a Branch", "style": { "bold": true, "margin-bottom": 1 } },
        {
          "type": "list",
          "id": "selected_branch",
          "input": "git branch --format='%(refname:short)'",
          "on-select": "view:branch-ops"
        }
      ]
    },
    "branch-ops": {
      "style": { "padding": 1 },
      "children": [
        { "text": "Operations for: {{.selected_branch}}", "style": { "foreground": "86" } },
        {
          "type": "list",
          "input": [
            { 
              "text": "󰘬 Checkout This Branch", 
              "on-press": "git checkout {{.selected_branch}}" 
            },
            { 
              "text": " View Full Log (Interactive)", 
              "on-press": "shell:git log {{.selected_branch}}" 
            },
            { 
              "text": "󰩈 Back to Picker", 
              "on-press": "view:branch-picker" 
            }
          ]
        }
      ]
    }
  }
}
