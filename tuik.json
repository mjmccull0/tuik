{
  "main": "dashboard",
  "views": {
    "dashboard": {
      "style": { "padding": 1 },
      "children": [
        {
          "type": "list",
          "items": [
            { 
              "text": "󰊢 Open Git Operations", 
              "on-press": "git-ops" 
            },
            { 
              "text": " Quick Status", 
              "on-press": "git status" 
            }
          ]
        },
        { "text": "Current View: Dashboard", "style": { "italic": true, "margin-top": 1 } }
      ]
    },
    "git-ops": {
      "style": { "padding": 1, "background-color": "#440000" },
      "children": [
        {
          "type": "list",
          "items": [
            { "text": "󰩈 Back to Main", "on-press": "dashboard" },
            { "text": " View Commit Log", "on-press": "git log --oneline -n 10" }
          ]
        },
        { "text": "Ops View Active", "style": { "bold": true, "margin-top": 1 } }
      ]
    }
  }
}
